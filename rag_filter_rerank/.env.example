# RAG Filter-Rerank Configuration
# Copy this file to .env and configure as needed

# === Ollama Filter Settings ===
OLLAMA_URL=http://localhost:11434/api/chat
OLLAMA_MODEL=qwen2.5-coder:7b-instruct

# Filter Parameters
FILTER_MAX_CODE_CHARS=1200
FILTER_PARALLELISM=8
FILTER_THRESHOLD=2
FILTER_MIN_SURVIVORS=12
FILTER_TIMEOUT_S=10

# === Reranker Settings ===
RERANK_VENDOR=cohere
COHERE_API_KEY=
COHERE_MODEL=rerank-english-v3.0
RERANK_TIMEOUT_S=30
RERANK_BATCH_SIZE=96
RERANK_MAX_CALLS=3
RERANK_MAX_DOCS=288
RERANK_RETRIES=3

# === Cache Settings ===
CACHE_DIR=.rag_cache
CACHE_TTL_S=86400
BUST_CACHE=false
REDIS_URL=

# === Pipeline Settings ===
PIPELINE_TOPN_RECALL=100
PIPELINE_TOPK_EVIDENCE=8
PROMPT_VERSION=v1

# === Feature Flags ===
RAG_FILTER_RERANK=on
DISABLE_RERANK=false
